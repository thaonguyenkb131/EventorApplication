<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Thanh tiêu đề (giả lập, bạn có thể dùng Toolbar nếu cần) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#006183"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:backgroundTint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Nội dung đổi mật khẩu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <!-- Mật khẩu hiện tại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mật khẩu hiện tại:"
                android:textSize="16sp"
                android:textColor="#333333" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_input_border"
                android:inputType="textPassword"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Mật khẩu mới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mật khẩu mới:"
                android:textSize="16sp"
                android:textColor="#333333" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_input_border"
                android:inputType="textPassword"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Nhập lại mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhập lại mật khẩu:"
                android:textSize="16sp"
                android:textColor="#333333" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_input_border"
                android:inputType="textPassword"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Nút xác nhận -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:backgroundTint="#006183"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:minWidth="120dp" />
    </LinearLayout>

</LinearLayout>