<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="15dp"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Những lĩnh vực có thể\nbạn quan tâm"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="20dp" />

        <!-- Flexbox chứa các tag -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/tagContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            flexbox:flexWrap="wrap"
            flexbox:justifyContent="flex_start">

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tinhnguyen"
                android:tag="Tình nguyện"
                android:text="🤝 Tình nguyện và Xã hội"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/thethao"
                android:tag="Thể thao"
                android:text="🧘‍♂️ Sức khỏe và Thể thao"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/moitruong"
                android:tag="Môi trường"
                android:text="🐱 Động vật"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/dulich"
                android:tag="Du lịch"
                android:text="✈️ Du lịch và Trải nghiệm"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/hocthuat"
                android:tag="Học thuật"
                android:text="💼 Khởi nghiệp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/moitruong_2"
                android:tag="Môi trường"
                android:text="♻️ Môi trường"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/hocthuat_2"
                android:tag="Học thuật"
                android:text="🤖 Công nghệ"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/vanhoa"
                android:tag="Văn hóa"
                android:text="🎭 Văn hóa"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                style="@style/InterestTag"
                android:id="@+id/amnhac"
                android:tag="Âm nhạc"
                android:text="🎵 Âm nhạc"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView style="@style/InterestTag"
                android:id="@+id/hocthuat_3"
                android:tag="Học thuật"
                android:text="📚 Học thuật"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
        </com.google.android.flexbox.FlexboxLayout>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
