<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_success_popup"
    android:gravity="center_horizontal">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtOtpTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nhập mã OTP gửi đến thiết bị:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginBottom="24dp" />

    <!-- Container chứa 6 ô nhập mã -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- 6 ô nhập mã OTP -->
        <EditText
            android:id="@+id/otp1"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/otp2"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/otp3"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/otp4"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/otp5"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/otp6"
            style="@style/OtpBoxStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:hint="0"
            android:textSize="30sp"
            android:background="@drawable/bg_otp_input"
            android:fontFamily="@font/montserrat_bold"
            android:cursorVisible="false" />
    </LinearLayout>

    <!-- Nút xác nhận -->
    <Button
        android:id="@+id/btnConfirmOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Xác nhận"
        android:textColor="#FFFFFF"
        android:backgroundTint="#066183"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAllCaps="false"
        android:layout_gravity="center" />
</LinearLayout>
