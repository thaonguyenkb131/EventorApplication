<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".PersonalProfile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <!-- Ảnh bìa -->
            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_after_login" />

            <!-- Nút chỉnh sửa ảnh bìa -->
            <LinearLayout
                android:id="@+id/btnEditCover"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_coverpage"
                android:padding="8dp"
                android:gravity="center_vertical">
            </LinearLayout>

            <!-- Avatar + Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="bottom|start">

                <!-- Avatar và nút chỉnh sửa avatar -->
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avt1_login"/>

                    <!-- Chỉnh sửa avatar -->
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_avt"
                        android:padding="4dp"
                        android:gravity="center_vertical">
                    </LinearLayout>
                </RelativeLayout>

                <!-- Tên + Email + Thành phố -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thảo Nguyên"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="nguyenltt22411@st.uel.edu.vn"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"/>

                        <TextView
                            android:id="@+id/txtCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="TP. Hồ Chí Minh"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- 🔻 Thêm phần này ngay dưới RelativeLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_statistic_box"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp">

            <!-- Box 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sự kiện đã lưu"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="8dp" />

            <!-- Box 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sự kiện đã tham gia"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="8dp" />

            <!-- Box 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sự kiện tổ chức\nthành công"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </LinearLayout>
        <!-- 🔺 Kết thúc khối thống kê -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lĩnh vực quan tâm"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="5dp"
            android:layout_marginBottom="5dp"/>
        <!-- Dòng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="5dp"
            android:weightSum="2">

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tag1"
                android:text="🎓 Học thuật"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"/>

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tag2"
                android:text="👥 Giao lưu cộng đồng"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Dòng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="5dp"
            android:weightSum="2">

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tag3"
                android:text="🏃‍♂️ Thể thao"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"/>

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tag4"
                android:text="🎼 Âm nhạc"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Dòng 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                style="@style/InterestTag"
                android:id="@+id/tag5"
                android:text="💡 Kỹ năng sống"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"/>

            <!-- Nút thêm -->
            <TextView
                android:id="@+id/tagAdd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_add_24"
                android:gravity="center"
                android:textColor="#006183"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sự kiện đã tổ chức"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="5dp"
            android:layout_marginBottom="5dp"/>
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>
