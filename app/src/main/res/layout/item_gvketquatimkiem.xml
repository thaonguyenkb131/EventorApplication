<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:backgroundTint="@android:color/white"
    android:elevation="6dp"
    android:layout_margin="8dp"
    android:gravity="center">
<!--sửa j đó-->
    <!--sửa j đó 2-->

    <androidx.cardview.widget.CardView
        style="@style/RoundedCardStyleGrid"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgKqtk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/phvb1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtKqtkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:maxLines="2"
        android:text="Sân khấu Thiên Đăng - Ngũ Quý Tương Phùng"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txtKqtkPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ 300.000 VND"
        android:textColor="#1c9cca"
        android:textSize="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="left" />

    <!-- Thời gian + Địa điểm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/iclocation" />

        <TextView
            android:id="@+id/txtKqtkLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TP.Hồ Chí Minh"
            android:textColor="#1C9CCA"
            android:textSize="7sp"
            android:fontFamily="@font/montserrat_semibold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/iccalendarblue" />

        <TextView
            android:id="@+id/txtKqtkDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/06/2025"
            android:textColor="#1C9CCA"
            android:textSize="7sp"
            android:fontFamily="@font/montserrat_semibold" />
    </LinearLayout>
</LinearLayout>
