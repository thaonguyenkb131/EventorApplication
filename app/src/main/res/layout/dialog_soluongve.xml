<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/main"
    android:layout_margin="20dp"
    android:background="@drawable/white_card_bg">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn hạng mục vé"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#006183"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat_bold"/>

    <!-- Danh sách vé động -->
    <LinearLayout
        android:id="@+id/layoutTicketList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <!-- Danh sách vé cứng, tối đa 3 dòng, theo đúng mẫu -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Tên vé 1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="end"
            android:maxWidth="90dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="100000 VND"
            android:textColor="#006183"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnMinus1"
            android:contentDescription="Giảm số lượng vé 1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center" />

        <TextView
            android:id="@+id/txtCount1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnPlus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé 1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Tên vé 2"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/price2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="end"
            android:maxWidth="90dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="0 VND"
            android:textColor="#006183"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnMinus2"
            android:contentDescription="Giảm số lượng vé 2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center" />
        <TextView
            android:id="@+id/txtCount2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white" />
        <ImageButton
            android:id="@+id/btnPlus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé 2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/name3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Tên vé 3"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"/>
        <TextView
            android:id="@+id/price3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="end"
            android:maxWidth="90dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="0 VND"
            android:textColor="#006183"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnMinus3"
            android:contentDescription="Giảm số lượng vé 3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center" />
        <TextView
            android:id="@+id/txtCount3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white" />
        <ImageButton
            android:id="@+id/btnPlus3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé 3"/>
    </LinearLayout>

    <!-- Thành tiền -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THÀNH TIỀN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 VND"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="end"
            android:maxWidth="120dp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <!-- Voucher -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn voucher của bạn"
                android:textSize="12sp"
                android:textColor="@color/blue_1C9CCA"
                android:fontStyle="italic"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-50.000 VND"
            android:textSize="14sp"
            android:textColor="#F44336"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="8dp" />

    <!-- Tổng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TỔNG THANH TOÁN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/tv_final_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 VND"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="end"
            android:maxWidth="120dp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnXacnhan"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Xác nhận"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#006183"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="8dp" />

</LinearLayout>