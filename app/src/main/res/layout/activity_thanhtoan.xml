<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanhtoanActivity"
    android:id="@+id/main">

    <!-- 🔹 Header cố định -->
    <include
        android:id="@+id/header"
        layout="@layout/layout_headertkcuatoi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Nội dung thanh toán đặt ở đây -->
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin đặt mua"
                android:padding="12dp"
                android:textColor="#006183"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"/>

            <EditText
                android:id="@+id/txt"
                android:layout_width="398dp"
                android:layout_height="50dp"
                android:hint="Họ và tên"
                android:padding="10dp" />

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="Số điện thoại"
                android:padding="10dp" />

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="Email"
                android:padding="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Giới tính"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#006183" />

                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:fontFamily="@font/montserrat_regular" />
                <RadioButton
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Nữ"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/montserrat_regular"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="5sp"/>

            </LinearLayout>

            <!-- 2. Giảm giá -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:text="Giảm giá từ Eventor"
                    android:textColor="#006183"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-50.000đ"
                    android:textColor="#FF3D3D"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="5sp"/>

            </LinearLayout>

            <!-- 3. Tóm tắt đơn hàng -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Tóm tắt đơn hàng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#006183"
                    android:paddingLeft="12dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="Tổng thanh toán"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.900.000 VND"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="Voucher"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="50.000 VND"
                        android:gravity="end"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="10sp"
                    android:textColor="#4F4F4F"
                    android:text="__________________________________________________________________________________"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="TỔNG"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.850.000 VND"
                        android:fontFamily="@font/montserrat_bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="5sp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 4. Phương thức thanh toán -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#006183"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/montserrat_bold"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tttvnpay"
                        android:layout_gravity="center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VNPay QR"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tttmomo"
                        android:layout_gravity="center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ví điện tử Momo (*******667)"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tttzalopay"
                        android:layout_gravity="center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ZaloPay (*******667)"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ttttindung"
                        android:layout_gravity="center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thẻ tín dụng/Thẻ ghi nợ"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng cách nhấn 'Thanh toán', chúng tôi hiểu rằng bạn đã đồng ý với Điều khoản và chính sách của Eventor. Thông tin sẽ được ứng dụng cho việc xử lý đặt hàng và xửa khihoàn thành giao dịch."
                android:textSize="12sp"
                android:paddingLeft="18dp"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/btnThanhtoan"
                android:text="Thanh toán"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#006183"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

