<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#006183"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingHorizontal="25dp">

                <!-- Tiêu đề "Sự kiện của tôi" -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Sự kiện của tôi"
                    android:layout_marginBottom="-18dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Các nút scroll ngang -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btnSavedEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginHorizontal="6dp"
                            android:paddingHorizontal="16dp"
                            android:text="Sự kiện đã lưu"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#006183"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/btnPurchasedTickets"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginHorizontal="6dp"
                            android:paddingHorizontal="16dp"
                            android:text="Vé đã mua"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#006183"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/btnPostedEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginHorizontal="6dp"
                            android:paddingHorizontal="16dp"
                            android:text="Sự kiện đã đăng"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#006183" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <GridView
                android:id="@+id/gvProduct"
                android:layout_width="match_parent"
                android:layout_height="612dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="15dp"
                android:padding="5dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
