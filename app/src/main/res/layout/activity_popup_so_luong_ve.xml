<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:id="@+id/main"
    android:layout_margin="12dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn hạng mục vé"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#006183"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/montserrat_bold"/>

    <!-- Hoàng Hôn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="HOÀNG HÔN"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="1.500.000"
            android:textColor="#006183"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMinus1"
            android:contentDescription="Giảm số lượng vé HOÀNG HÔN"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center" />

        <TextView
            android:id="@+id/txtCount1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnPlus1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé HOÀNG HÔN"/>

    </LinearLayout>

    <!-- Chiều Tà -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:text="CHIỀU TÀ"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="1.300.000"
            android:textColor="#006183"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMinus2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center"
            android:contentDescription="Giảm số lượng vé CHIỀU TÀ"/>

        <TextView
            android:id="@+id/txtCount2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnPlus2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé CHIỀU TÀ"/>

    </LinearLayout>

    <!-- Chạng Vạng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHẠNG VẠNG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.000.000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"/>

        <ImageButton
            android:id="@+id/btnMinus3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center"
            android:contentDescription="Giảm số lượng vé CHẠNG VẠNG"/>

        <TextView
            android:id="@+id/txtCount3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnPlus3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé CHẠNG VẠNG"/>

    </LinearLayout>

    <!-- Chập Chạng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:text="CHẬP CHẠNG"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700.000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/montserrat_bold"/>

        <ImageButton
            android:id="@+id/btnMinus4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/minus_button"
            android:scaleType="center"
            android:contentDescription="Giảm số lượng vé CHẬP CHẠNG"/>

        <TextView
            android:id="@+id/txtCount4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnPlus4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:src="@drawable/plusbutton"
            android:scaleType="center"
            android:contentDescription="Tăng số lượng vé CHẬP CHẠNG"/>

    </LinearLayout>

    <!-- Thành tiền -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THÀNH TIỀN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.900.000 VND"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <!-- Voucher -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn voucher của bạn"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontStyle="italic"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000 VND"
            android:textSize="16sp"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="8dp" />

    <!-- Tổng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TỔNG"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/tv_final_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.850.000 VND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#006183"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Xác nhận"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#006183"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="8dp" />

</LinearLayout>