<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".VedamuaActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#006183"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="Sự kiện của tôi"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnSavedEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="6dp"
                    android:paddingHorizontal="16dp"
                    android:text="Sự kiện đã lưu"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#006183"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/btnPurchasedTickets"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingHorizontal="16dp"
                    android:text="Vé đã mua"
                    android:textColor="#006183"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnPostedEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="6dp"
                    android:paddingHorizontal="16dp"
                    android:text="Sự kiện đã đăng"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#006183"
                    android:alpha="0.5" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- GridView -->
    <GridView
        android:id="@+id/gvVdm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="2"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="10dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FooterActivity -->
    <include
        android:id="@+id/footer_layout"
        layout="@layout/activity_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
