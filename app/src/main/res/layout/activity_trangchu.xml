<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    tools:context=".TrangchuActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#FFFFFF">

    <!-- Thanh công cụ -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#006183"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvlogo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imvtimkiem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_search_white" />

                <ImageView
                    android:id="@+id/imvnhantin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_message" />
            </LinearLayout>
        </LinearLayout>

        <!-- Danh mục sự kiện -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#006183"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/danhmuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:fontFamily="@font/montserrat_semibold">

                <TextView
                    android:id="@+id/txtamnhac"
                    style="@style/DanhMucItem"
                    android:text="Âm nhạc"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txtvanhoa"
                    style="@style/DanhMucItem"
                    android:text="Văn hóa"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txthocthuat"
                    style="@style/DanhMucItem"
                    android:text="Học thuật"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txtthethao"
                    style="@style/DanhMucItem"
                    android:text="Thể thao"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txttinhnguyen"
                    style="@style/DanhMucItem"
                    android:text="Tình nguyện"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txtmoitruong"
                    style="@style/DanhMucItem"
                    android:text="Môi trường"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/txtdulich"
                    style="@style/DanhMucItem"
                    android:text="Du lịch"
                    android:textStyle="bold"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollContent"
        android:layout_below="@id/header"
        android:layout_above="@id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Banner -->
            <LinearLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Dot giữa 3 banner -->
            <LinearLayout
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center" />

            <!-- Chat với trợ lý Eventor -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@android:color/white">

                        <!-- Hộp chat bên trong -->
                        <LinearLayout
                            android:id="@+id/chatAssistant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!-- 1. Nền hình tròn -->
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/bg_circle_gray" />

                                <!-- 2. Icon chat nền xám -->
                                <ImageView
                                    android:id="@+id/chatIcon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_chat" />

                                <!-- 3. Icon active đè lên -->
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/ic_chat_active" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/txtTrolyEventor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Trợ lý Eventor"
                                    android:textColor="#015B68"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/edtChat"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="30dp"

                                        android:paddingStart="10dp"
                                        android:background="@drawable/edittext_stroke"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="center_vertical"
                                        android:hint="Hôm nay bạn cần trợ giúp gì?"
                                        android:textColor="#808080"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/imgSend"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/icsend"
                                        android:padding="5dp"
                                        android:layout_gravity="center" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sự kiện nổi bật - Title // Chỗ này có upsize so với figma cho cân đối -->
