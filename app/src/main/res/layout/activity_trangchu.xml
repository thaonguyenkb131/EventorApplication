                        <ImageView
                            android:id="@+id/imgSknb1"
                            style="@style/RoundedImageStyle"
                            android:src="@drawable/sknb1" />
                    </androidx.cardview.widget.CardView>
                    <!--SK2-->
                    <androidx.cardview.widget.CardView
                        style="@style/RoundedCardStyleSknb">
