<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".TrangthongbaoActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#006183"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/txtTieudeHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thông báo"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imvtimkiem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/timkiem" />

            <ImageView
                android:id="@+id/imvnhantin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/nhantin" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bật/tắt thông báo -->
    <Button
        android:id="@+id/btnTatThongBao"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Tắt thông báo"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:elevation="2dp" />

    <!-- ListView -->
    <ListView
        android:id="@+id/lvThongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTatThongBao"
        android:layout_above="@id/footer"
        android:divider="#CCC"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <!-- Footer -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
