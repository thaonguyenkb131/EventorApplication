<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005A71"
    tools:context=".SukienxuhuongActivity">

    <!-- Header -->

    <include
        android:id="@+id/header_layout"
        layout="@layout/activity_headerver2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtSukienxuhuong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sự kiện xu hướng"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ListView -->
    <ListView
        android:id="@+id/lvSukien"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtSukienxuhuong"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FooterActivity -->
    <include
        android:id="@+id/footerLayout"
        layout="@layout/activity_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
