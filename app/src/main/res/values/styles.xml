<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpBoxStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
<!--        <item name="android:imeOptions">next</item>-->
        <item name="android:drawableBottom">@drawable/otp_underline</item>
    </style>

    <style name="InterestTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
<!--        <item name="android:paddingHorizontal">16dp</item>-->
<!--        <item name="android:paddingVertical">8dp</item>-->
        <item name="android:background">@drawable/bg_tag_unselected</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@null</item>
    </style>

</resources>