<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Style cho các title danh mục-->
    <style name="DanhMucItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

<!--    Style cho ImageView-->
    <style name="RoundedImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--Style cho cardview bo góc - Sự kiện nổi bật-->
    <style name="RoundedCardStyleSknb" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <!--Style cho cardview bo góc - Sự kiện xu hướng-->
    <style name="RoundedCardStyleSkxh" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <!--Style cho cardview bo góc - Danh mục sự kiện-->
    <style name="RoundedCardStyleDmsk" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">90dp</item>
    </style>
<!--        Style cho title - Danh mục sự kiện-->
    <style name="DmskText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:titleMarginTop">5dp</item>
        <item name="android:textColor">#1C9CCA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Style cho cardview bo góc - Dành cho bạn-->
    <style name="RoundedCardStyleDcb" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <!--Style cho tên sự kiện-->
    <style name="EventTitle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:titleMarginTop">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Style cho giá sự kiện-->
    <style name="EventPrice" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:titleMarginTop">5dp</item>
        <item name="marginHorizontal">5dp</item>
        <item name="android:textColor">#1C9CCA</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--Style cho cardview bo góc - Phù  với bạn-->
    <style name="RoundedCardStyleGrid" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

        <!--Style cho cardview bo góc - Trang Sự kiện xu hướng-->
    <style name="RoundedCardStylePageSkxh" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

<!--    Bo góc cho background-->
    <style name="DabanTextViewStyle">
        <item name="android:background">@drawable/bg_corner</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

<!--        ảnh sự kiện trong thông báo-->


    <style name="CircleImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>