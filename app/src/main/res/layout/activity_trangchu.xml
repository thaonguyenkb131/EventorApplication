                            style="@style/RoundedImageStyle"
                            android:src="@drawable/sknb8" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSukienxuhuong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Sự kiện xu hướng"
                    android:textColor="#006183"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/txtXemthem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xem_th_m"
                    android:textColor="#9e9e9e"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <!--    Sự kiện xu hướng - Scroll View-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linearLayoutSkxh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
