<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".BonusPoint">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm thưởng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#006183"/>
        <!-- Box EventPoint + Ưu đãi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@drawable/bg_statistic_box"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <!-- Row: EventPoint + Ưu đãi đã đổi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EventPoint"
                        android:textSize="18sp"
                        android:textColor="#888888"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.000"
                        android:textSize="22sp"
                        android:textColor="#006183"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ưu đãi đã đổi"
                        android:textSize="18sp"
                        android:textColor="#888888"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textColor="#006183"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Hạn điểm -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0 EventPoint sẽ hết hạn vào 2025-07-01"
                android:textSize="14sp"
                android:textColor="#444444"
                android:background="@drawable/bg_border"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:gravity="center"/>
        </LinearLayout>
        <!-- Lịch sử tích điểm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử tích điểm"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#006183"
            android:layout_marginTop="24dp"/>

<!--         ListView / RecyclerView gợi ý -->
        <ListView
            android:id="@+id/listHistory"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:layout_marginTop="8dp"/>

        <!-- Coupon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coupon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiết kiệm hơn với Eventor Coupon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#006183"
                android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>

        <!-- Gợi ý dùng RecyclerView để list coupon đẹp hơn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_statistic_box"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/voucher"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 10k cho đơn từ 150k"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.500"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 10.000"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paintFlags="strike_thru_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" EventPoint"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_statistic_box"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/voucher2"
            android:padding="4dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm 15k cho đơn từ 250k"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.500"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paintFlags="strike_thru_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" EventPoint"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
