<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="#FFFFFF"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Tài Khoản"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#006183"
        android:fontFamily="@font/montserrat_bold" />

    <!-- Mô tả -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="để tiếp tục tới Eventor"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Tài khoản 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avatar6"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên Lê Trần Thảo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nguyenltt22411@st.uel.edu.vn"
                android:textSize="14sp"
                android:textColor="#777777"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <!-- Tài khoản 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avatar1"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An Nguyễn Viết"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anngvkb0204@gmail.com"
                android:textSize="14sp"
                android:textColor="#777777"
                android:fontFamily="@font/montserrat_regular" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <!-- Nút đăng nhập -->
    <Button
        android:id="@+id/btnConfirmLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập ngay"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:backgroundTint="#006183"
        android:layout_marginTop="16dp"
        android:padding="12dp" />
</LinearLayout>
